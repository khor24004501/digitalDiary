<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="497.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="test1.LoginController">
   <children>
      <VBox layoutX="7.0" layoutY="8.0" prefHeight="490.0" prefWidth="593.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="User Login">
               <font>
                  <Font name="Times New Roman Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="loginUserField" promptText="Enter username or email" />
            <TextField fx:id="loginPasswordField" promptText="Enter password" />
            <Button fx:id="buttonLogin" mnemonicParsing="false" onAction="#clickLogin" text="Login" />
            <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#clickBack" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>
